# .env.example
# Copy this file to .env and fill in the appropriate values

# Database connection string (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname?schema=public

# Auth.js secret
AUTH_SECRET=your_auth_secret_here

# Google OAuth credentials
AUTH_GOOGLE_ID=your_google_client_id
AUTH_GOOGLE_SECRET=your_google_client_secret

# GitHub OAuth credentials
AUTH_GITHUB_ID=your_github_client_id
AUTH_GITHUB_SECRET=your_github_client_secret

# Next environment
NODE_ENV=development

# External similarity API URL
SIMILARITY_API_URL=http://localhost:8000

# AWS S3 configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET_NAME=your_s3_bucket_name
AWS_REGION=your_aws_region

# Maximum upload size (bytes), e.g. 1048576 for 1MB
NEXT_PUBLIC_UPLOAD_MAX_SIZE=1048576
# Maximum request body size for Server Actions (bytes), defaults to NEXT_PUBLIC_UPLOAD_MAX_SIZE + 100KB overhead
UPLOAD_SERVER_BODY_LIMIT=1150976 
